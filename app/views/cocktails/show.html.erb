<div class="container">
  <h1><%=@cocktail.name%></h1>
<ul>
  <% @cocktail.doses.each do |c|%>
  <li><%= c.description %> - <%= c.ingredient.name %> -
    <%= link_to "delete", cocktail_dose_path(c.cocktail.id, c), method: :delete, data: { confirm: "Are you sure?" }  %></li>
  <% end %>
</ul>

<%= link_to "Edit", new_cocktail_dose_path(@cocktail), class: "btn btn-primary "  %>
<%= link_to "Back", cocktails_path, class: "btn btn-primary "  %>
</div>
